class Solution {
    public boolean isPalindrome(int x) {

        if(x<0) return false;

        String c = String.valueOf(x);
        int i=0;
        int j = c.length()-1;

        while(i<=j)
        {
            if(c.charAt(i)==c.charAt(j))
            {
                i++;
                j--;
            }
            else 
                return false;
        }
        
        return true;
        
    }
}
